<p id="notice"><%= notice %></p>

<h1><span class="glyphicon glyphicon-star" aria-hidden="true"></span> Players</h1>

<table class="table table-bordered table-hover table-striped table-condensed table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Shirt size</th>
      <th>Birthday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <% if player.name.blank? %>
        <tr class="success">
      <% else %>
        <tr>
      <% end %>
        <td><%= player.name %></td>
        <td><%= player.age %></td>
        <td><%= player.shirt_size %></td>
        <td><%= player.birthday %></td>
        <td><%= link_to 'Show', player %></td>
        <td>
          <%= link_to edit_player_path(player) do %>
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <% end %>
        </td>
        <td>
          <%= link_to player, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Player', new_player_path, class: "btn btn-primary" %>
