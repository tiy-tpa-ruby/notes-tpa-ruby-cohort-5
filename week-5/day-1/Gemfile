source 'https://rubygems.org'

# Sinatra for serving web/http
gem 'sinatra'

# Handy sinatra helper things
gem 'sinatra-contrib'

# Awesome templating library
gem 'haml'

# Postgres is a better database
gem 'pg'

# Use this for flash messages in the session
gem 'rack-flash3'

# Allows us to use ActiveRecord migrations on their own
gem 'standalone_migrations'
